{
    "name": "dschoenbauer/slim-controller",
    "type": "project",
    "license": "Private",
    "authors": [
        {
            "name": "David Schoenbauer",
            "email": "dschoenbauer@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "slim/slim": "3.6.0"
    },
    "autoload": {
        "psr-4": {
            "DSchoenbauer\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "5.6.2",
        "satooshi/php-coveralls": "dev-master",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "scripts": {
        "test": "phpunit tests",
        "build-coverage": "phpunit tests -c ./tests/configuration.xml --coverage-html ./vendor/coverage",
        "view-coverage": "start ./vendor/coverage/index.html",
        "inspect": "phpcs --standard=PSR2 --colors src/",
        "inspect-repair": "phpcbf --standard=PSR2 src/",
        "test-coverage": [
            "@build-coverage",
            "@view-coverage"
        ]
    }
}
